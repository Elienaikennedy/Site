{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pixelcanvasfect",
	"fileTypes": [
		".canvas",
		".prrr"
	],
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#function"
		},
		{
			"include": "#object"
		},
		{
			"include": "#variable"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.canvas",
				"match": "\\b(if|elif|else|while|for|break|continue|pass|return|import|in|true|false|PI)\\b"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.character.canvas",
				"match": "\\b(PI)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.canvas",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.canvas",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"name": "comment.line.number-sign.canvas",
			"match": "#.*$"
		},
		"function": {
			"name": "entity.name.function.canvas",
			"match": "\\b@*[a-zA-Z_][a-zA-Z0-9_]*\\s*\\("
		},
		"object": {
			"name": "entity.name.class.canvas",
			"match": "\\b(Canvas|Sprite)\\s*\\("
		}
	},
	"scopeName": "source.canvas"
}